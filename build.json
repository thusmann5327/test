{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/$PROJECT_ID/lamp-stack",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/$PROJECT_ID/lamp-stack"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
        "run",
        "deploy",
        "lamp-stack",
        "--image",
        "gcr.io/$PROJECT_ID/lamp-stack",
        "--platform",
        "managed",
        "--region",
        "us-central1",
        "--allow-unauthenticated"
      ]
    }
  ],
  "images": [
    "gcr.io/$PROJECT_ID/lamp-stack"
  ]
}
